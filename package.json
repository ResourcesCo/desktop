{
  "name": "Resources.co",
  "version": "0.0.2",
  "description": "Resources.co Desktop App",
  "main": "./main/index.js",
  "private": true,
  "scripts": {
    "make": "electron-forge make",
    "package": "electron-forge package",
    "start": "yarn renderer:build && yarn renderer:import && yarn electron:start",
    "renderer:build": "cd ../resources && yarn electron:build && yarn electron:export",
    "renderer:import": "rm -r ./renderer && cp -r ../resources/renderer ./renderer",
    "electron:start": "electron-forge start"
  },
  "keywords": [],
  "author": {
    "name": "Benjamin Atkin",
    "email": "ben@benatkin.com"
  },
  "license": "MIT",
  "config": {
    "forge": "./resources.forge.config.js"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "electron-serve": "^0.4.1",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.46",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "electron": "^8.0.2",
    "electron-reloader": "^1.0.1",
    "prettier": "^1.19.1"
  }
}
