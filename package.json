{
  "name": "Resources.co",
  "version": "0.0.2",
  "description": "Resources.co Desktop App",
  "main": "./main/index.js",
  "private": true,
  "scripts": {
    "start": "concurrently -k -n electron,webpack \"yarn electron:start\" \"yarn bundle:watch\"",
    "build": "yarn bundle:build && yarn electron:make",
    "electron:package": "electron-forge package",
    "electron:make": "electron-forge make",
    "electron:start": "electron-forge start",
    "bundle:build": "cd packages/desktop-bundle && yarn build",
    "bundle:watch": "cd packages/desktop-bundle && yarn watch"
  },
  "keywords": [],
  "author": {
    "name": "Benjamin Atkin",
    "email": "ben@benatkin.com"
  },
  "license": "MIT",
  "config": {
    "forge": "./resources.forge.config.js"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "electron-serve": "^0.4.1",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.46",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "electron": "^8.0.2",
    "electron-reloader": "^1.0.1",
    "prettier": "^1.19.1"
  }
}
